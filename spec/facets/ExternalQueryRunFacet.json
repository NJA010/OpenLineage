{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "$id" : "https://openlineage.io/spec/facets/1-0-0/ExternalQueryRunFacet.json",
  "$defs" : {
    "ExternalQueryRunFacet" : {
      "description" : "The facet that contains information about externally run query",
      "allOf" : [ {
        "$ref" : "https://openlineage.io/spec/1-0-2/OpenLineage.json#/$defs/RunFacet"
      }, {
        "type" : "object",
        "properties" : {
          "externalQueryId" : {
            "description" : "Query ID that would uniquely identify the external query",
            "type" : "string",
            "example" : "my-project-1234:US.bquijob_123x456_123y123z123c"
          },
          "source" : {
            "description" : "Source of where the external query is originated from.",
            "type" : "string",
            "example" : "bigquery"
          }
        },
        "required" : [ "externalQueryId", "source" ]
      } ],
      "type" : "object"
    }
  },
  "type" : "object",
  "properties" : {
    "externalQuery" : {
      "$ref" : "#/$defs/ExternalQueryRunFacet"
    }
  }
}